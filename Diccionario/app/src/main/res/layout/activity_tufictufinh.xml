<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tufictufinh1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:text="Tufíctufiquí ní ajánhe cué masurúcálha. Tan iquí jué ninháfa níja irricú maráme ó lhaláquicó iritóinhe punh, puráni iquí nénhca cué palá inháfa ilequí ptaíquíye punh óyu ní irricú maráme
túfictúfiquí nénhca irrísurunhéuca maráma tíni. Óyu quí maráme epéme lénhlúrinhé juá carráni nínhca tufíctufiquíyu ípsurunhé unh ninháfa níja iquí maráme arápchá óra
\n"
                android:textAlignment="center"
                android:textSize="17dp"
                android:textColor="#410F0F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:textAlignment="center"
                android:textSize="17dp"
                android:textColor="#410F0F" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fondo"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_principal"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fondo"
            app:srcCompat="@drawable/home" />

    </RelativeLayout>


</RelativeLayout>