<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ochápacá ipsótacá ójonh. Ó rriónh maráme ójonh ní rrisótacá maráma piúju púru. Ní ióctecá ójonh ója nínhca fánhe unhé tíco epéme ojóc chá suírra ijiquíca maráma, puráni iquí maíca juáclhanhé ójonh ninháfa piúju púru, tan iquí maráme quirríjatacá nífa mailhíco rricú maráme córa purú ó epéme tíco ijéne, tan ninháta piúju rricú maráme puráni alachí córa maráma itafíquitonhé, tacá epéme ní anhé córa purú maráma ó epéme ijíne tíco óyu nífa ninháta piúju ipurú rricú maráme. \n\n"
                android:textAlignment="center"
                android:textSize="17dp"
                android:textColor="#410F0F" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ojonh01"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ojónh ní ajánhe tí putúlha nínhca ifánhe úca tíni. Iquí maráme ojóqui juáclha mailicá maarráca. Ojóqui mafiúca ajá ní rricú maráme lhúrri córa ó ámpe ijarátenh, tan jué ninháfa ní rricú maráme córa lhacá, tan ó epéme ipiquítenh \n\n"
                android:textAlignment="center"
                android:textSize="17dp"
                android:textColor="#410F0F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="#410F0F" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fondo"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_principal"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fondo"
            app:srcCompat="@drawable/home" />

    </RelativeLayout>


</RelativeLayout>