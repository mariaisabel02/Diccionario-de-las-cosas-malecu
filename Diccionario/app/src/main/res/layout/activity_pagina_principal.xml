<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        tools:context=".paginaPrincipal">


        <GridLayout
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:columnWidth="90dp"
            android:numColumns="auto_fit">

            <ImageButton
                android:id="@+id/btn_mapuca"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/mapuca" />

            <ImageButton
                android:id="@+id/btn_jerro"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="0"
                android:layout_column="1"
                app:srcCompat="@drawable/jerro" />

            <ImageButton
                android:id="@+id/btn_cuji"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="1"
                android:layout_column="0"
                app:srcCompat="@drawable/cuji" />

            <ImageButton
                android:id="@+id/btn_caru"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="1"
                android:layout_column="1"
                app:srcCompat="@drawable/caru" />

            <ImageButton
                android:id="@+id/btn_mapuru"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="2"
                android:layout_column="0"
                app:srcCompat="@drawable/mapuru" />

            <ImageButton
                android:id="@+id/btn_quijilha"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="2"
                android:layout_column="1"

                app:srcCompat="@drawable/quijilha" />

            <ImageButton
                android:id="@+id/btn_chiqui"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="3"
                android:layout_column="0"
                app:srcCompat="@drawable/chiqui" />

            <ImageButton
                android:id="@+id/btn_chiu"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="3"
                android:layout_column="1"
                app:srcCompat="@drawable/chiu" />

            <ImageButton
                android:id="@+id/btn_pupa"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="4"
                android:layout_column="0"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@drawable/fondo"
                app:srcCompat="@drawable/pupa" />

            <ImageButton
                android:id="@+id/btn_checacheca"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@drawable/fondo"
                app:srcCompat="@drawable/checacheca" />

            <ImageButton
                android:id="@+id/btn_quirri"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="5"
                android:layout_column="0"
                android:background="@drawable/fondo"
                app:srcCompat="@drawable/quirri" />

            <ImageButton
                android:id="@+id/btn_quirrilenh"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="5"
                android:layout_column="1"
                app:srcCompat="@drawable/quirrilenh" />

            <ImageButton
                android:id="@+id/btn_tali"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="6"
                android:layout_column="0"
                android:background="@drawable/fondo"
                app:srcCompat="@drawable/tali" />

            <ImageButton
                android:id="@+id/btn_arafufu"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="6"
                android:layout_column="1"
                android:background="@drawable/fondo"
                app:srcCompat="@drawable/arafufu" />

            <ImageButton
                android:id="@+id/btn_arafufu_mausunca"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="7"
                android:layout_column="0"
                app:srcCompat="@drawable/arafufu_mausunca" />

            <ImageButton
                android:id="@+id/btn_jafara"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="7"
                android:layout_column="1"
                app:srcCompat="@drawable/jafara" />

            <ImageButton
                android:id="@+id/btn_tufictufinh"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="8"
                android:layout_column="0"
                app:srcCompat="@drawable/tufictufinh" />

            <ImageButton
                android:id="@+id/btn_majoca"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="8"
                android:layout_column="1"
                app:srcCompat="@drawable/majoca" />

            <ImageButton
                android:id="@+id/btn_curu"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_row="9"
                android:layout_column="0"
                app:srcCompat="@drawable/curu" />

        </GridLayout>
    </RelativeLayout>
</ScrollView>
